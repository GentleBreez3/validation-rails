<%= form_with model: plan do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %><br>
  </div>

  <div>
    <%= form.label :start_date %>
    <%= form.datetime_select :start_date %>
  </div>

  <div>
    <%= form.label :end_date %>
    <%= form.datetime_select :end_date %>
  </div>
  
  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label:available %>
    <%= form.check_box :available, {}, true, false %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
